@model IEnumerable<Student_Management.Models.Historique>
@{
    Layout = "_Mylayout";
}

@section Title {
    <title>Historiques</title>
}
@section Styles {
}

<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
    Historiques
</h2>
<hr />
<br />
<br />


<br />

<div class="w-full overflow-hidden rounded-lg shadow-xs">
    <div class="w-full overflow-x-auto">
        <table class="w-full whitespace-no-wrap">
            <thead>
                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.IdHistorique)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.HeureMonter)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.StudentId)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.BusId)
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                @foreach (var item in Model)
                {
                    <tr class="text-gray-700 dark:text-gray-400">
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.IdHistorique)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.HeureMonter)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.Student.Nom)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.BusId)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {

}