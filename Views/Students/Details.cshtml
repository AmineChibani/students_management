@model Student_Management.Models.Student
@{
    Layout = "_Mylayout";
}

@section Title {
    <title>Les informations de l'étudiant</title>
}

@section Styles {
    <style>
        #studentdiv {
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1px;
            width: 50%;
        }

        #studentimg {
            width: 100%;
            max-width: 300px; /* Ajustez la largeur maximale selon vos besoins */
            height: auto;
        }

        #divtitlestudent {
            margin-top: 5px;
            width: 80%;
            height: 50px;
        }

        #titlestudent {
            text-align: center;
            width: 100%;
            height: 100%;
            font-size: 1.5rem;
        }
        p{
            color:#ffff
        }
    </style>
}

<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
    Les informations de l'étudiant
</h2>
<hr />
<br />

<div id="studentdiv" class="max-w-2xl px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">


    <div id="divtitlestudent" class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple">
        <p id="titlestudent" class="mb-4 font-semibold">@Model.Nom @Model.Prenom</p>
    </div>

    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Cen : </span> @Model.Cen</div>
    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Cin : </span>@Model.Cin</div>
    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Tel : </span>@Model.Tel</div>
    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Adresse : </span>@Model.Adresse</div>
    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Email : </span>@Model.Email</div>
    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Mot de passe : </span>@Model.Password</div>
    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Etat : </span>@Model.Etat</div>
    <div class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"><span>Quartier : </span>@Model.CartierNavigation.Libelle</div>

    <p>
        <a asp-action="Index" asp-controller="Students" class="btn btn-primary w-100">Retour à la liste des étudiants</a>
    </p>
</div>
