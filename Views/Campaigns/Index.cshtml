@model IEnumerable<Student_Management.Models.Campaign>
@{
    Layout = "_Mylayout";
}

@section Title {
    <title>Campaign</title>
}
@section Styles {
}

<h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
    Campaign
</h2>
<hr />
<br />
<br />
<div>
    <a asp-action="AddOrEdit" asp-controller="Campaigns" class="px-5 py-3 font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
        Ajouter
    </a>
</div>

<br />

<div class="w-full overflow-hidden rounded-lg shadow-xs">
    <div class="w-full overflow-x-auto">
        <table class="w-full whitespace-no-wrap">
            <thead>
                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.DateDebut)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.DateFin)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.Budget)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.ContentUrl)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.AdUrl)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.IdType)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.IdPublisher)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.IdAgeRange)
                    </th>
                    <th class="px-4 py-3">
                        @Html.DisplayNameFor(model => model.IdLocation)
                    </th>
                    <th class="px-4 py-3">
                        Modifier
                    </th>
                    <th class="px-4 py-3">
                        Supprimer
                    </th>
                    <th class="px-4 py-3">
                        Details
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                @foreach (var item in Model)
                {
                    <tr class="text-gray-700 dark:text-gray-400">
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.DateDebut)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.DateFin)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.Budget)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.ContentUrl)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.AdUrl)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.IdType)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.IdPublisher)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.IdAgeRange)
                        </td>
                        <td class="px-4 py-3 text-sm">
                            @Html.DisplayFor(modelItem => item.IdLocation)
                        </td>
                        <td class="px-4 py-3">
                            <div class="flex items-center space-x-4 text-sm">
                                <a asp-action="AddOrEdit" asp-controller="Campaigns" asp-route-id="@item.Id" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Edit">
                                    <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                    </svg>
                                </a>
                            </div>
                        </td>
                        <td class="px-4 py-3">
                            <div class="flex items-center space-x-4 text-sm">
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this record ?')">
                                    <button type="submit" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray">
                                        <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </td>
                        <td class="px-4 py-3">
                            <div class="flex items-center space-x-4 text-sm">
                                <a asp-action="Details" asp-controller="Campaigns" asp-route-id="@item.Id" aria-label="Delete">
                                    <svg class="w-5 h-5" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"></path>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {

}